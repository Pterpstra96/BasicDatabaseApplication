<Window x:Class="BasicDatabaseApplication.uninstallDBPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicDatabaseApplication"
        mc:Ignorable="d"
        Title="Uninstall Confirmation Page" Height="450" Width="800">
    <Grid>
        <Button x:Name="uninstallYes" Content="Yes, delete all data" HorizontalAlignment="Left" Margin="574,267,0,0" VerticalAlignment="Top" Height="75" Width="108" Click="uninstallYes_Click"/>
        <Button x:Name="uninstallNo" Content="No, don't delete database" HorizontalAlignment="Left" Margin="133,210,0,0" VerticalAlignment="Top" Height="179" Width="249"/>
        <Label HorizontalAlignment="Center" Margin="0,93,0,0" VerticalAlignment="Top" Height="82" Width="780" FontSize="18" RenderTransformOrigin="0.5,0.751">
            <TextBox Text="Are you sure you want to uninstall the database? All user information and data will be permanently removed." TextWrapping="Wrap" Width="770" Height="72"/>
        </Label>

    </Grid>
</Window>
